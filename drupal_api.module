    '#description' => t('RID for webform'),
    '#required' => TRUE,
  );
  $form['form_cid'] = array(
    '#type' => 'textfield',
    '#title' => t('CID'),
    '#default_value' => $cid,
    '#description' => t('CID for webform'),
    '#required' => TRUE,
  );

  $form['form_course_nid'] = array(
    '#type' => 'textfield',
    '#title' => t('Course NID'),
    '#default_value' => $courses_nid,
    '#description' => t('NID for course'),
