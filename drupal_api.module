    $query->condition('uid', $agentID);

    $data = $query->execute()->fetchAll();
    $response = [
      'Agents' => []
    ];

    foreach ($data as $row) {

      $obj = [];
      $obj['uid'] = $row->uid;
      $obj['name'] = $row->name;
      $obj['mail'] = $row->mail;
      array_push($response['Agents'], $obj);

    }

    return drupal_json_output($response);
  }
  else
  {

    http_response_code(401);

  }

}


